- provide(:title, "New Academic")
.panel.panel-success
  .panel-heading
    Fill up your academic Details
  .panel-body
    = form_for @academic, data: {confirm: "Are you sure information once submitted cant be modified ?"}, html: {role: "form"} do |f|
      - if @academic.errors.any?
        #error_explanation
          %h2
            = pluralize(@academic.errors.count, "error")
            prohibited this candidate from being saved:
          %ul
            - @academic.errors.full_messages.each do |message|
              %li= message
      %p.form-declaration
        Fields marked with star must be filled
      .tenth-details
        %h3 Tenth Standard Details
        %p.form-declaration As given in your 10th Mark sheet/Passing certificate
        .form-group
          = f.label :tenth_marks, "Marks % *"
          %br/
          = f.text_field :tenth_marks, class: "form-control", :required => true, value: ''
        .form-group
          = f.label :tenth_rollno, "Roll Number *"
          %br/
          = f.number_field :tenth_rollno, class: "form-control", :required => true
        .form-group
          = f.label :tenth_year, "Year of passing *"
          %br/
          = f.number_field :tenth_year, class: "form-control", :required => true
        .form-group
          = f.label :tenth_board, "Board *"
          %br/
          = f.text_field :tenth_board, class: "form-control", :required => true
      .tenth-details
        %h3 Twelfth Standard Details
        %p.form-declaration As given in 12th Mark sheet/Passing certificate
        .form-group
          = f.label :twelfth_marks, "Marks % *"
          %br/
          = f.text_field :twelfth_marks, class: "form-control", :required => true, value: ''
        .form-group
          = f.label :twelfth_rollno, "Roll number *"
          %br/
          = f.number_field :twelfth_rollno, class: "form-control", :required => true
        .form-group
          = f.label "Year of passing *"
          %br/
          = f.number_field :twelfth_year, class: "form-control", :required => true
        .form-group
          = f.label :twelfth_board,  "Board *"
          %br/
          = f.text_field :twelfth_board, class: "form-control", :required => true
      .tenth-details
        %h3 Twelfth Standard Subject Details
        %p.form-declaration As given in your 12th Mark sheet
        .form-group
          = f.label :twelfth_stream, "12th Streams *"
          %br/
          = f.select :twelfth_stream, Subject.select("distinct(tstream)").collect {|p| [p.tstream, p.tstream]}, {}, {class: "form-control", :required => true, id: "select-stream"}
        %div
          = f.label "12th Subjects *"
          %p.form-declaration
            Select the subjects given in your 12th marksheet and put their marks and leave the rest blank
          #sub-entry
            %h5
              Select your stream
      .form-group= f.submit "Submit", class: "btn btn-primary btn-lg"
