.row
  .col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1.col-xs-12.col-xs-offset-0
    .panel.panel-primary
      .panel-heading
        All Filtered Subjects
        = link_to "New SubStrMap", new_sub_str_map_path , class: "btn btn-sm btn-warning"
      .panel-body
        %table.table
          %thead
            %tr
              %td id
              %td Stream
              %td Subject
              %td Gen
              %td SC
              %td ST
              %td OBC-A
              %td OBC-B
              %td{colspan: 2} Actions
          %tbody
            - @sub_str_maps.each do |sub_str_map|
              %tr
                %td #{sub_str_map.id}
                %td #{sub_str_map.stream_id}
                %td #{sub_str_map.subject_id}
                %td #{sub_str_map.GEN}
                %td #{sub_str_map.SC}
                %td #{sub_str_map.ST}
                %td #{sub_str_map.OBC_A}
                %td #{sub_str_map.OBC_B}
                %td
                  = link_to :edit, edit_sub_str_map_path(sub_str_map), class: "btn btn-primary btn-sm"
                %td
                  = link_to :delete, sub_str_map, method: :delete,data: {confirm: "Are you sure to delete"}, class: "btn btn-danger btn-sm"
