.row
  .col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1.col-xs-12.col-xs-offset-0
    .panel.panel-primary
      .panel-heading
        All Subjects
        = link_to "New Subject", new_subject_path, class: "btn btn-sm btn-warning"
      .panel-body
        %table.table
          %thead
            %tr
              %td id
              %td Subject
              %td{colspan: 2} Actions
          %tbody
            - @subjects.each do |subject|
              %tr
                %td #{subject.id}
                %td #{subject.name}
                %td
                  = link_to :edit, edit_subject_path(subject), class: "btn btn-primary btn-sm"
                %td
                  = link_to :delete, subject, method: :delete,data: {confirm: "Are you sure to delete"}, class: "btn btn-danger btn-sm"
