.row
  .col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1.col-xs-12.col-xs-offset-0
    .panel.panel-primary
      .panel-heading
        Subjects Editor
      .panel-body
        = form_for (@subject), role: "form" do |f|
          - if @subject.errors.any?
            #error_explanation
              %h2
                = pluralize(@subject.errors.count, "error")
                prohibited this subject from being saved
              %ul
                - @subject.errors.full_messages.each do |message|
                  %li= message
          %p
            = f.label "Subject Name"
            %br/
            = f.text_field :name, class: "form-control", :required => true
          %p
            = f.label "12th Streams"
            %br/
            = f.select :tstream,options_for_select(%w[Arts Commerce Science Others]), {}, {class: "form-control", :required => true}
          %p
            = f.submit
